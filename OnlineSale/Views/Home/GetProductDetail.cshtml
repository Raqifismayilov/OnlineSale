
@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

@using OnlineSale.Areas.AdminPart.Models.OnlineSaleTable
@model OnlineSale.Models.HomeView
<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <span class="font-weight-bold">@ViewBag.ProductName</span>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 col-12">
        @if (Model.SubImageAndDetail.SubSlide != null)
        {
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="index-slide-show" style="float:left;z-index:0">
                        <div id="carousel-example-2" class="carousel slide carousel-fade" data-ride="carousel">
                            <ol class="carousel-indicators">
                                @{int kkk = 0; }
                                @foreach (SlideMod item in Model.SubImageAndDetail.SubSlide)
                                {
                                    kkk++;
                                    if (kkk == 1)
                                    {
                                        <li data-target="#carousel-example-2" data-slide-to="0" class="active"></li>
                                    }
                                    else
                                    {
                                        <li data-target="#carousel-example-2" data-slide-to=(@kkk-1).ToString()></li>
                                    }

                                }
                            </ol>
                            <div class="carousel-inner" role="listbox" style="z-index:0">
                                <div class="carousel-item active">
                                    <div class="view">
                                        <img style="height:220px; height:120px;" class="rounded mx-auto d-block w-100 img-fluid" src="~/Content/SlideImage/@Model.SubImageAndDetail.SubSlide.FirstOrDefault().PhotoPath"
                                             alt="@Model.SubImageAndDetail.SubSlide.FirstOrDefault().ProductName">
                                        <div class="mask rgba-black-light"></div>
                                    </div>
                                </div>
                                @foreach (SlideMod item in Model.SubImageAndDetail.SubSlide)
                                {
                                    <div class="carousel-item">
                                        <div class="view">
                                            <img style="height:220px; height:120px;" class="d-block w-100" src="~/Content/SlideImage/@item.PhotoPath"
                                                 alt="Second slide">
                                            <div class="mask rgba-black-strong"></div>
                                        </div>
                                    </div>
                                }
                            </div>
                            <a class="carousel-control-prev" href="#carousel-example-2" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Qeriyə</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel-example-2" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">İrəli</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="row clearfix" style="height:30px"></div>
    </div>
    @if (Model.SubImageAndDetail.SubDetail != null)
    {
        <div class="col-xl-6 col-lg-6 col-md-4 col-sm-12 col-12">
            <div class="row">
                <div class="col-xl-12 col-lg-12">
                    <p class="font-weight-bold">Texniki göstəricilər</p>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <table class="table table-bordered">
                        <thead class="table thead-dark">
                            <tr>
                                <th>Ümumi məlumat</th>
                                <th>Xüsusiyyət</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.SubImageAndDetail.SubDetail)
                            {
                                <tr>
                                    <td class="font-weight-bold">@item.Name</td>
                                    <td>@item.Values</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

        <div class="col-xl-2 col-lg-2 col-md-2 col-sm-12 col-12 text-center">
            <div class="row font-weight-bold">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <span style="background-color:yellow">MƏHSUL KODU: @ViewBag.ProductCode</span>
                </div>
            </div>
            <div class="row clearfix" style="height:5px"></div>
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="jumbotron jumbotron-fluid">
                        <h2 class="font-weight-bold">@ViewBag.Price<br />&#8380</h2>
                    </div>
                </div>
            </div>
        </div>
   
    
</div>
<div class="row clearfix" style="height:10px"></div>


@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

@using OnlineSale.Areas.AdminPart.Models.OnlineSaleTable
@model OnlineSale.Models.HomeView

<div class="head-slide-cascade" style="padding-bottom:15px">
    <div id="carousel-example-2" class="carousel slide carousel-fade" data-ride="carousel" style="z-index:0">
        <ol class="carousel-indicators">
            @foreach (MainSlide slide in Model.MainSlideList)
            {

                if (slide.RowNumber == 1)
                {
                    <li data-target="#carousel-example-2" data-slide-to="0" class="active"></li>
                }
                else
                {
                    <li data-target="#carousel-example-2" data-slide-to="@slide.RowNumber"></li>
                }
               
            }

        </ol>
        <div class="carousel-inner" role="listbox" style="z-index:0">


@{
    /**/
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <title>Şifrənin bərpası</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container-fluid">
        <div class="clearfix" style="height:100px;min-height:50px"></div>
        <div class="row">
            @using (Html.BeginForm("RecoveryUser", "Logon", FormMethod.Post, new { @class = "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12" }))
            {
                <div class="row clearfix" style="height:10px"></div>
                <div class="row">
                    <p style="background-color:#49415f;color:white;padding-top:5px;padding-bottom:5px" class="offset-xl-4 col-xl-4 offset-xl-4 offset-lg-4 col-lg-4 offset-lg-4 offset-md-3 col-md-6 col-md-3 offset-sm-2 col-sm-8 offset-sm-2 offset-1 col-10 offset-1 font-weight-bold text-center">Şifrəni unutmusunuz?</p>
                </div>
                <div class="row clearfix" style="height:10px"></div>
                <div class="row">
                    <input type="email" class="offset-xl-4 col-xl-4 offset-xl-4 offset-lg-4 col-lg-4 offset-lg-4 offset-md-3 col-md-6 col-md-3 offset-sm-2 col-sm-8 offset-sm-2 offset-1 col-10 offset-1 form-control" placeholder="Email" />
                </div>
                <div class="row clearfix" style="height:10px"></div>
                <div class="row">
                    <input type="submit" name="email" class="btn-sm btn-success form-control font-weight-bold offset-xl-4 col-xl-4 offset-xl-4 offset-lg-4 col-lg-4 offset-lg-4 offset-md-3 col-md-6 col-md-3 offset-sm-2 col-sm-8 offset-sm-2 offset-1 col-10 offset-1" value="GÖNDƏR" />
                </div>
                <div class="row clearfix" style="height:10px"></div>
            }
        </div>
        <div class="row">
            <span style="background-color:red;color:white;padding-top:5px;padding-bottom:5px" class="offset-xl-4 col-xl-4 offset-xl-4 offset-lg-4 col-lg-4 offset-lg-4 offset-md-3 col-md-6 col-md-3 offset-sm-2 col-sm-8 offset-sm-2 offset-1 col-10 offset-1 font-weight-bold text-center">@ViewBag.Result</span>
        </div>
    </div>
</body>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
</html>
